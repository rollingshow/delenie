#include "stdafx.h"
#include <iostream>
using namespace std;

int main()
{
	int n, x, y, z;
	setlocale(LC_ALL, "Russian");
	cout << "Введите трехзначное число" << endl;
	cin >> n;
	x = n / 100;
	y = (n % 100) / 10;
	z = n % 10;
	if ((x + y + z) % 3 == 0)
		cout << "Число кратно 3" << endl;
	else
		cout << "Число не кратно 3" << endl;
	return 0;
}
